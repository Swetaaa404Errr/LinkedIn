<div style="text-align: center;">

<h3> Hii <%= @current_user.username %> </h3>

<% @current_user.followers.each do |user| %>


   

    <% user.job_navigations.each do |job_navigation| %>
        <section class="card my-5 shadow size" style="background-color: rgb(3, 3, 53);"> 
        <div class="card-body">
      
        <h3 class="card-subtitle mb-3 text-white">Application form  To post for Job Recruitment</h3>
      

    <div class=" mb-3 text-light">
    <h5> By :</h5>
    <%= job_navigation.user.email %>
    </div>
   
    <div class=" mb-3 text-light">
    <h5>JOB TITLE : </h5>
    <%= job_navigation.jobtitle%>
    </div>


    

    <div class=" mb-3 text-light">
     <h5>JOB DESCRIPTION :</h5>
     <%= job_navigation.jobdescription %>
   
    </div>

    <div class=" mb-3 text-light">
     <h5>NUMBER OF VACANCY :</h5>
   
     <%= job_navigation.novac %>
   
    </div>

    <div class=" mb-3 text-light">
    <h5>SKILL:</h5>
     <%= job_navigation.skill%>
     
   
    </div>

      <div class=" mb-3 text-light">
    <h5>JOB ROLE:</h5>
     <%= job_navigation.jobrole%>
   
    </div>
           
      <div class=" mb-3 text-light">
    <h5>JOB SECTOR:</h5>
     <%= job_navigation.jobsector%>
   
    </div>

     
   <p><%= job_navigation.likes.count %> <%= (job_navigation.likes.count) == 1 ? 'Like' : 'Likes' %></p>

   <% pre_like = job_navigation.likes.find {|like| like.user_id == @current_user.id} %>
   <% if pre_like %>
    <%= button_to 'Unlike', job_navigation_like_path(job_navigation, pre_like), method: :delete %>
    <% else %>
    <%= button_to 'Like', job_navigation_likes_path(job_navigation), method: :post %>
    <% end %>
     


  <%= link_to 'Apply&Review', job_navigation_path(job_navigation)  %>
  
     </section>

    
           
            
    
<% end %>
<% end %>

</div>

<div class="form-check">
              <input type="checkbox" class="form-check-input book-select-check"   >
              <label class="form-check-label" ></label>
            </div>

            <button type="button" class="btn btn-danger " id="delete-books" style="display: none;">Delete Books</button>