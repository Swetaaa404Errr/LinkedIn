<div class="container">
    <div id="page-content">
        <h1 class="text-center mt-4">My Inbox</h1>
    </div>

    <div class="convo-container">

    <%= link_to 'JOBROLES',  conversation_messages_path(@conversation)  %>

                <br/>
        <h3>All Conversations:</h3>
       
        <% @conversations.each do |conversation| %>
            <% if conversation.sender_id == @current_user.id || conversation.receiver_id == @current_user.id %>
                <% if conversation.sender_id == @current_user.id %>
                    <% receiver = User.find(conversation.receiver_id) %>
                <% else %>
                    <% receiver = User.find(conversation.sender_id) %>
                <% end %>
                <%= link_to receiver.email, conversation_messages_path(conversation), style: "font-size: 20px; text-decoration: none;" %>
                <br/>
            <% end %>
        <% end %>
        <hr>
        <h3>All Users:</h3>
       
        <% @user.each do |user| %>
            <% if user.id != @current_user.id %>
                <p><%= link_to user.email, conversations_path(sender_id: @current_user.id, receiver_id: user.id), method: "post", style: "font-size: 20px; text-decoration: none;" %></p>
            <% end %>
        <% end %>
       
    </div>
   
</div>